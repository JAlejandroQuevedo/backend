<style>
    body {
        background-color: #333;
    }

    .login-container {
        max-width: 360px;
        margin: auto;
        margin-top: 64px;
        padding: 32px;
        border-radius: 0.5em;
        color: #333;
        border: 1px solid #bbb;
        background-color: #ccc;
    }

    .a2 {
        color: #333;
    }

    .a2:hover {
        color: #000;
    }
</style>


<div class="login-container">
    <h1><b>CODER LOGIN</b></h1>
    <h2><b>Ingresa tu usuario</b></h2>

    <form action="/api/auth/jwtlogin" method="post" style="margin-top: 32px;">
        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <span class="input-group-text" id="group1"><i class="fa-solid fa-user"></i></span>
            <input type="email" name="email" class="form-control" placeholder="Email" required="required"
                autofocus="autofocus">
        </div>

        <div class="input-group" style="width: 300px; margin-bottom: 32px;">
            <span class="input-group-text" id="group2"><i class="fa-solid fa-lock"></i></span>
            <input type="password" name="password" class="form-control" placeholder="Password" required="required">
        </div>

        <button type="submit" class="btn btn-success">Ingresar</button>
        <br>
        <button class="btn btn-info submit_btn" onclick="window.location.replace('/api/auth/google')">Google</button>
        <div style="margin-top: 24px;">
            No ten√©s cuenta?: <a class="a2" href="/register">Registrate</a>
        </div>
    </form>
</div>